@model Handlingform.Models.Vacancy

<h2>Edit Vacancy</h2>

<form asp-action="Edit">
    <input type="hidden" name="VacancyId" value="@Model.VacancyId" />

    <label for="Title">Title</label>
    <input type="text" id="Title" name="Title" value="@Model.Title" />

    <label for="Department">Department</label>
    <input type="text" id="Department" name="Department" value="@Model.Department" />

    <label for="AvailablePositions">Available Positions</label>
    <input type="number" id="AvailablePositions" name="AvailablePositions" value="@Model.PositionsAvailable" />

    <button type="submit">Save Changes</button>
</form>
